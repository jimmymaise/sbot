[
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "*Your time offs*",
      "verbatim": false
    },
    "accessory": {
      "type": "button",
      "action_id": "back_to_home",
      "text": {
        "type": "plain_text",
        "text": "Back",
        "emoji": true
      }
    }
  },
  {
    "type": "actions",
    "block_id": "timeoff_filter",
    "elements": [
      {
        "type": "static_select",
        "action_id": "timeoff_type_filter",
        "placeholder": {
          "type": "plain_text",
          "text": "Select type",
          "emoji": true
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": ":palm_tree:PTO",
              "emoji": true
            },
            "value": "PTO"
          },
          {
            "text": {
              "type": "plain_text",
              "text": ":palm_tree:Quarter PTO",
              "emoji": true
            },
            "value": "Quarter PTO"
          },
          {
            "text": {
              "type": "plain_text",
              "text": ":money_with_wings:UTO",
              "emoji": true
            },
            "value": "UTO"
          },
          {
            "text": {
              "type": "plain_text",
              "text": ":thermometer:Sick",
              "emoji": true
            },
            "value": "Sick"
          }
        ]
      },
      {
        "type": "datepicker",
        "action_id": "timeoff_start_filter",
        "placeholder": {
          "type": "plain_text",
          "text": "From date",
          "emoji": true
        }
      },
      {
        "type": "datepicker",
        "action_id": "timeoff_end_filter",
        "placeholder": {
          "type": "plain_text",
          "text": "To date",
          "emoji": true
        }
      }
    ]
  },
  {
    "type": "divider"
  },
  {% for leave in user_leaves %}
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "{{leave.type_icon}} *{{ leave.type }}*\n{{ leave.duration }}\nComment: {{ leave.reason }}",
      "verbatim": false
    }
  },
  {
    "type": "context",
    "elements": [
      {
        "type": "mrkdwn",
        "text": "{{ leave.status_icon }} {{leave.status}}",
        "verbatim": false
      }
    ]
  },
  {% endfor %}
  {
    "type": "divider"
  }
]
