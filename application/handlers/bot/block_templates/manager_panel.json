[
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "*Manager panel*",
      "verbatim": false
    },
    "accessory": {
      "type": "button",
      "action_id": "switch_personal",
      "text": {
        "type": "plain_text",
        "text": ":arrows_counterclockwise: Switch to Personal",
        "emoji": true
      }
    }
  },
  {
    "type": "divider"
  },
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "{{team_info.name}} in {{ announcement_channel_name }}",
      "verbatim": false
    }
  },
  {
    "type": "context",
    "elements": [
      {% for user in slack_users  %}
      {
        "type": "image",
        "image_url": "{{ user.profile.image_192 }}",
        "alt_text": "user image"
      },
      {% endfor %}
      {
        "type": "mrkdwn",
        "text": "{{ num_of_normal_member }} member and {{ num_of_manager }} manager",
        "verbatim": false
      }
    ]
  },
  {
    "type": "actions",
    "elements": [
      {
        "type": "button",
        "action_id": "team_timeoffs",
        "text": {
          "type": "plain_text",
          "text": "All Time Offs",
          "emoji": true
        }
      },
      {
        "type": "button",
        "action_id": "absence_add",
        "text": {
          "type": "plain_text",
          "text": "Add Time Off",
          "emoji": true
        }
      },
      {
        "type": "button",
        "action_id": "team_settings_home",
        "text": {
          "type": "plain_text",
          "text": "Team Settings",
          "emoji": true
        }
      },
      {
        "type": "overflow",
        "action_id": "team_actions",
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Delete team",
              "emoji": true
            },
            "value": "destroy,{{team_info.id}}"
          }
        ],
        "confirm": {
          "title": {
            "type": "plain_text",
            "text": "Please confirm",
            "emoji": true
          },
          "text": {
            "type": "mrkdwn",
            "text": "Are you sure you want to perform this action?",
            "verbatim": false
          },
          "confirm": {
            "type": "plain_text",
            "text": "Yes",
            "emoji": true
          },
          "deny": {
            "type": "plain_text",
            "text": "No",
            "emoji": true
          }
        }
      }
    ]
  },
  {
    "type": "section",
    "text": {
      "type": "plain_text",
      "text": " ",
      "emoji": true
    }
  },
  {
    "type": "section",
    "text": {
      "type": "plain_text",
      "text": " ",
      "emoji": true
    }
  },
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "*Waiting for your approval*",
      "verbatim": false
    },
    "accessory": {
      "type": "overflow",
      "action_id": "pending_timeoffs_actions",
      "options": [
        {
          "text": {
            "type": "plain_text",
            "text": "Manage auto approve",
            "emoji": true
          },
          "value": "manage_auto_approve"
        }
      ]
    }
  },
  {
    "type": "divider"
  }
  {% for leave in wait_for_approval_leaves %},
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "{{leave.type_icon}} *{{ leave.type }}*\n{{ leave.duration }}\nComment: {{ leave.reason }}",
      "verbatim": false
    },
    "accessory": {
      "type": "overflow",
      "action_id": "timeoff_actions",
      "options": [
        {
          "text": {
            "type": "plain_text",
            "text": "Show user profile",
            "emoji": true
          },
          "value": "user_profile,{{ leave.user_id }},"
        },
        {
          "text": {
            "type": "plain_text",
            "text": "Delete",
            "emoji": true
          },
          "value": "delete,{{ leave.id }},list"
        }
      ]
    }
  },
  {
    "type": "context",
    "elements": [
      {
        "type": "mrkdwn",
        "text": "Requested by",
        "verbatim": false
      },
      {
        "type": "image",
        "image_url": "{{ leave.user.profile.image_192 }}",
        "alt_text": "user image"
      },
      {
        "type": "mrkdwn",
        "text": "*<@{{ leave.user_id }}>*",
        "verbatim": false
      }
    ]
  },
  {
    "type": "actions",
    "elements": [
      {
        "type": "button",
        "action_id": "accept_request_home",
        "text": {
          "type": "plain_text",
          "text": "Approve",
          "emoji": true
        },
        "style": "primary",
        "value": "{{leave.id}}"
      },
      {
        "type": "button",
        "action_id": "reject_request_home",
        "text": {
          "type": "plain_text",
          "text": "Reject",
          "emoji": true
        },
        "style": "danger",
        "value": "{{leave.id}}"
      },
      {
        "type": "button",
        "action_id": "direct_discuss",
        "text": {
          "type": "plain_text",
          "text": ":speech_balloon: Discuss",
          "emoji": true
        },
        "value": "210432",
        "url": "slack://user?team=TF1SH8PRU&id={{leave.user_id}}"
      }
    ]
  }
  {% endfor %},
  {
    "type": "section",
    "text": {
      "type": "plain_text",
      "text": " ",
      "emoji": true
    }
